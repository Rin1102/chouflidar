<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- AppBar with Navbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_brown"
        android:title="@string/app_name"
        app:titleTextColor="@color/white"
        android:elevation="4dp" />

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- Navbar Menu (Buttons) -->
            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/rent_button"
                    android:text="@string/rent_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"/>

                <Button
                    android:id="@+id/binome_button"
                    android:text="@string/binome_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"/>

                <Button
                    android:id="@+id/homestead_button"
                    android:text="@string/homestead_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"/>

                <Button
                    android:id="@+id/help_button"
                    android:text="@string/help_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"/>

                <Button
                    android:id="@+id/login_button"
                    android:text="@string/login_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <!-- Cards -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="20dp">

                <!-- Rent Card -->
                <CardView
                    android:id="@+id/rent_card"
                    android:layout_width="0dp"
                    android:layout_height="200dp"
                    android:layout_marginEnd="16dp"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="@string/rent_button"
                        android:textSize="20sp"
                        android:textColor="@color/light_brown"/>
                </CardView>

                <!-- Binome Card -->
                <CardView
                    android:id="@+id/binome_card"
                    android:layout_width="0dp"
                    android:layout_height="200dp"
                    android:layout_marginEnd="16dp"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="@string/binome_button"
                        android:textSize="20sp"
                        android:textColor="@color/light_brown"/>
                </CardView>

                <!-- Homestead Card -->
                <CardView
                    android:id="@+id/homestead_card"
                    android:layout_width="0dp"
                    android:layout_height="200dp"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="@string/homestead_button"
                        android:textSize="20sp"
                        android:textColor="@color/light_brown"/>
                </CardView>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- Footer -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/dark_brown"
        android:padding="16dp">

        <!-- Project Logo -->
        <ImageView
            android:id="@+id/logo"
            android:src="@drawable/ic_logo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true" />

        <!-- Project Description -->
        <TextView
            android:id="@+id/project_description"
            android:text="@string/project_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/logo"
            android:layout_marginLeft="8dp"
            android:textSize="14sp"
            android:textColor="@color/white"/>

        <!-- Social Media and Privacy Links -->
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/project_description"
            android:layout_marginTop="8dp">

            <TextView
                android:text="@string/privacy_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_marginEnd="16dp"
                android:textSize="14sp"/>

            <TextView
                android:text="@string/social_media_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="14sp"/>
        </LinearLayout>

    </RelativeLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
