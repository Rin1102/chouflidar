<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="?attr/actionBarSize"
    android:background="@drawable/back">

    <!-- Grid Layout for Cards -->
    <GridLayout
        android:id="@+id/grid_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="8dp"
        android:columnCount="2"
        android:rowCount="2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/add_house_button"
        tools:layout_editor_absoluteX="8dp">

        <!-- Card 1 -->
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_margin="@dimen/layoutmargin"
            app:cardCornerRadius="@dimen/cardCo"
            app:cardElevation="@dimen/cardEl">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/padding">

                <!-- Icon -->
                <ImageView
                    android:layout_width="@dimen/layout"
                    android:layout_height="@dimen/layout"
                    android:layout_gravity="center"
                    android:src="@drawable/vector" />

                <!-- Location -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginTop="@dimen/margintop"
                    android:text="@string/location"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text" />

                <!-- Price -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginTop="@dimen/margintop"
                    android:text="@string/price"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text" />

                <!-- Description -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginTop="@dimen/margintop"
                    android:text="@string/description"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text" />

                <!-- Rent Button -->
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="12dp"
                    android:backgroundTint="@color/brown"
                    android:text="@string/button"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:onClick="dialPhoneNumber"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Card 2 -->
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_margin="@dimen/layoutmargin"
            app:cardCornerRadius="@dimen/cardCo"
            app:cardElevation="@dimen/cardEl">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/padding">

                <!-- Icon -->
                <ImageView
                    android:layout_width="@dimen/layout"
                    android:layout_height="@dimen/layout"
                    android:layout_gravity="center"
                    android:src="@drawable/vector" />

                <!-- Location -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginTop="@dimen/margintop"
                    android:text="@string/location"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text" />

                <!-- Price -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginTop="@dimen/margintop"
                    android:text="@string/price"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text" />

                <!-- Description -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginTop="@dimen/margintop"
                    android:text="@string/description"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text" />

                <!-- Rent Button -->
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="12dp"
                    android:backgroundTint="@color/brown"
                    android:text="@string/button"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:onClick="dialPhoneNumber"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_margin="@dimen/layoutmargin"
            app:cardCornerRadius="@dimen/cardCo"
            app:cardElevation="@dimen/cardEl">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/padding">

                <!-- Icon -->
                <ImageView
                    android:layout_width="@dimen/layout"
                    android:layout_height="@dimen/layout"
                    android:layout_gravity="center"
                    android:src="@drawable/vector" />

                <!-- Location -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginTop="@dimen/margintop"
                    android:text="@string/location"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text" />

                <!-- Price -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginTop="@dimen/margintop"
                    android:text="@string/price"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text" />

                <!-- Description -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginTop="@dimen/margintop"
                    android:text="@string/description"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text" />

                <!-- Rent Button -->
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="12dp"
                    android:backgroundTint="@color/brown"
                    android:text="@string/button"
                    android:textColor="@color/white"
                    android:textStyle="bold" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_margin="@dimen/layoutmargin"
            app:cardCornerRadius="@dimen/cardCo"
            app:cardElevation="@dimen/cardEl">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/padding">

                <!-- Icon -->
                <ImageView
                    android:layout_width="@dimen/layout"
                    android:layout_height="@dimen/layout"
                    android:layout_gravity="center"
                    android:src="@drawable/vector" />

                <!-- Location -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginTop="@dimen/margintop"
                    android:text="@string/location"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text" />

                <!-- Price -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginTop="@dimen/margintop"
                    android:text="@string/price"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text" />

                <!-- Description -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginTop="@dimen/margintop"
                    android:text="@string/description"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text" />

                <!-- Rent Button -->
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="12dp"
                    android:backgroundTint="@color/brown"
                    android:text="@string/button"
                    android:textColor="@color/white"
                    android:textStyle="bold" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </GridLayout>

    <!-- Floating Action Button -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/add_house_button"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/brown"
        android:src="@drawable/more"
        android:contentDescription="Add"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <!-- Bottom Navigation -->
</androidx.constraintlayout.widget.ConstraintLayout>
